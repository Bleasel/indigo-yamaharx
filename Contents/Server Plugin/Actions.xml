<?xml version="1.0"?>
<Actions>
	<Action id="setVolume" deviceFilter="self">
		<Name>Set Volume</Name>
		<CallbackMethod>setVolume</CallbackMethod>
		<ConfigUI>
			<SupportURL>http://www.chadfrancis.com</SupportURL>
			<Field id="txtvolume" type="textfield" default="-30">
				<Label>Level:</Label>
				<Description>in dB</Description>
			</Field>
		</ConfigUI>
	</Action>
	<Action id="toggleMute" deviceFilter="self">
		<Name>Toggle Mute</Name>
		<CallbackMethod>toggleMute</CallbackMethod>
	</Action>
	<Action id="turnOn" deviceFilter="self">
		<Name>Turn On</Name>
		<CallbackMethod>turnOn</CallbackMethod>
	</Action>
	<Action id="turnOff" deviceFilter="self">
		<Name>Turn Off</Name>
		<CallbackMethod>turnOff</CallbackMethod>
	</Action>
	<Action id="sleep" deviceFilter="self">
		<Name>Sleep</Name>
		<CallbackMethod>sleep</CallbackMethod>
	</Action>
	<Action id="wake" deviceFilter="self">
		<Name>Wake</Name>
		<CallbackMethod>wake</CallbackMethod>
	</Action>
	<Action id="getStatus" deviceFilter="self">
		<Name>Get Status</Name>
		<CallbackMethod>getStatus</CallbackMethod>
	</Action>
</Actions>
